<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/indicator_background" /> <!-- Set the desired transparent background color, e.g., 50% black -->
            <corners android:radius="10dp" /> <!-- Set the desired corner radius, adjust as per your preference -->
        </shape>
    </item>

    <!-- Existing selector XML for the indicator background -->
    <item android:drawable="@drawable/indicator_background" />
</layer-list>
