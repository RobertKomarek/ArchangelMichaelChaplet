<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Define different states and their corresponding backgrounds -->
<item android:state_pressed="true">
    <shape>
        <corners android:radius="@dimen/btn_radius" /> <!-- Set the desired corner radius in dp -->
        <solid android:color="@color/btn_nav_background_pressed" /> <!-- Set the desired background color when pressed -->
    </shape>
</item>
<item>
    <shape>
        <corners android:radius="@dimen/btn_radius" /> <!-- Set the desired corner radius in dp -->
        <solid android:color="@color/btn_nav_background" /> <!-- Set the desired background color for other states -->
    </shape>
</item>
</selector>

